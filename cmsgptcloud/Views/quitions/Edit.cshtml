@model cmsgptcloud.Models.quition


    @{
    ViewBag.Title = "Edit";
    }
   

    <style>
        body {
            direction: rtl;
        }
        .form-control{
        height:237px;
        }
        .col-md-2, .col-md-10, .control-label {
            float: none;
        }
        select , input ,textarea{
        max-width:none;
        text-anchor:start;
        }
      button, html input[type="button"], input[type="reset"], input[type="submit"] {
                width: 100px;
                margin-right: 337px;
            }
    .form-horizontal .control-label {
        padding-top: 0px;
    }
        .control{
        height:38px;
                }

    </style>

    <h2>Edit</h2>


    @using (Html.BeginForm())
    {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>تعديل</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.QId)

        <div class="form-group">

            <label class="control-label col-md-2"> المادة اسم </label>
           
          
            <div class="col-md-10 ">
                @Html.EditorFor(model => model.mname, new { htmlAttributes = new { @class = "control" } })
                @Html.ValidationMessageFor(model => model.mname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> السؤال </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Qquition, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Qquition, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> الاجابة</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Qanuser, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Qanuser, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> الكود </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Qcode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Qcode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> التفاصيل </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Qnote, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Qnote, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
                <a herf="/quitions/Index">  <input type="submit" value="الرجوع الئ القائمة الرئيسيه" class="btn btn-default" /></a>
            </div>
        </div>
    </div>
    }

    
   

    @section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    }
